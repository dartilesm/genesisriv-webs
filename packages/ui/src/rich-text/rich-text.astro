---
import { PortableText } from "astro-portabletext";
import type { PortableTextProps } from "astro-portabletext/types";
import CustomList from "./custom-list.astro";

type Props = PortableTextProps & {
  class?: string;
  id?: string;
  transitionName?: string;
};

const { value, class: className = "", id, transitionName, ...props } = Astro.props;
---

<div transition:name={transitionName} id={id}>
  <PortableText value={value} {...props} class={className} components={{ list: CustomList }} />
</div>

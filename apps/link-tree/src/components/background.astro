---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";

type Props = {
  mobileImage: ImageMetadata;
  desktopImage: ImageMetadata;
};

const { mobileImage, desktopImage } = Astro.props;
---

<picture class='fixed top-0 left-0 w-screen h-screen -z-10 dark:invert'>
  <!-- Add image source for portrait orientation -->
  <source media='(orientation: portrait)' srcset={mobileImage.src} />
  <!-- Add image source for landscape orientation -->
  <source media='(orientation: landscape)' srcset={desktopImage.src} />
  <!-- Add fallback image for browsers that don't support picture element -->
  <Image src={mobileImage} alt='Background Image' class='w-full h-full object-cover' />
</picture>

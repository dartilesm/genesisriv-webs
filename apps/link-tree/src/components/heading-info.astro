---
import { LinkTree } from "@/types";

type Props = {
  name: LinkTree["name"];
  role: LinkTree["role"];
  description: LinkTree["description"];
};

const { name, role, description } = Astro.props;
---

<div class='flex flex-col gap-2 text-center'>
  <h1 class='text-lg font-bold'>{name}</h1>
  <h2 class='text-base italic'>{role}</h2>
  <p class='text-sm text-center font-light'>{description}</p>
</div>

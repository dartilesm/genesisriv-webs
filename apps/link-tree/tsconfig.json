{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui/*": [
        "../../packages/ui/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@sanity-app/*": [
        "../../apps/sanity/*"
      ]
    },
    "types": [
      "astro/client"
    ]
  }
}
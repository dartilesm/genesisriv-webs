---
import { Portfolio } from "@/types";
import sanitizeImage from "@sanity-app/utils/sanitize-image";
import type { SanityImageSource } from "@sanity/image-url/lib/types/types";

type Props = {
  data: Portfolio["certificates"];
};

const { data } = Astro.props;
---

<section id='certificates' class='w-full py-12 md:py-24 lg:py-32 bg-white'>
  <div class='container px-4 md:px-6 mx-auto'>
    <div class='flex flex-col items-center justify-center space-y-4 text-center'>
      <div class='space-y-2'>
        <h2 class='text-3xl font-bold tracking-tighter sm:text-5xl'>{data?.title}</h2>
        {
          data?.description && (
            <p class='max-w-[900px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400'>
              {data?.description}
            </p>
          )
        }
      </div>
    </div>
    <div class='mx-auto grid max-w-5xl items-start gap-8 py-12 lg:grid-cols-2 lg:gap-12'>
      {
        data?.certificatesList?.map((certificate) => (
          <>
            <div class='max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700'>
              <a href='#'>
                <img
                  class='rounded-t-lg'
                  src={sanitizeImage(certificate?.photo as SanityImageSource, {
                    format: "webp",
                  }).url()}
                  alt=''
                />
              </a>
              <div class='p-5'>
                <a href='#'>
                  <h5 class='mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white'>
                    {certificate?.title}
                  </h5>
                </a>
              </div>
            </div>
          </>
        ))
      }
    </div>
  </div>
</section>

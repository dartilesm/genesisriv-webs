---
import { Portfolio } from "@/types";
import { PortableText } from "astro-portabletext";

type Props = {
  data: Portfolio["experience"];
};

const { data } = Astro.props;
---

<section id='experience' class='w-full py-12 md:py-24 lg:py-32'>
  <div class='container px-4 md:px-6 mx-auto'>
    <div class='flex flex-col items-center justify-center space-y-4 text-center'>
      <div class='space-y-2'>
        <h2 class='text-3xl font-bold tracking-tighter sm:text-5xl'>{data?.title}</h2>
        {
          data?.description && (
            <p class='max-w-[900px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed'>
              {data.description}
            </p>
          )
        }
      </div>
    </div>

    <!-- <ol class="relative border-s border-gray-200 dark:border-gray-700">                  
  {data?.experienceList?.map((experience) => (<li class="mb-10 ms-4">
      <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
      <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{experience.subtitle}</time>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{experience.role}</h3>
      <PortableText class='mb-4 text-base font-normal text-gray-500 dark:text-gray-400' value={experience.description} />
      
  </li>))}
</ol> -->
    <div class='mx-auto grid max-w-5xl items-start gap-8 py-12'>
      {
        data?.experienceList?.map((experience) => (
          <div>
            <div class='flex flex-col space-y-1.5 p-6'>
              <h3 class='text-2xl font-semibold whitespace-nowrap leading-none tracking-tight'>
                {experience.role}
              </h3>
              <p class='text-sm text-muted-foreground'>{experience.subtitle}</p>
            </div>
            <div class='p-6'>
              <PortableText class='text-gray-500' value={experience.description} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

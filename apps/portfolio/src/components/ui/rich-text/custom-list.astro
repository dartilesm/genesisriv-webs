---
import type { Props as $, List as ListType } from "astro-portabletext/types";

export type Props = $<ListType>;

const { node, class: className } = Astro.props;
---

<ul
  class:list={[
    "pl-5 flex flex-col gap-2",
    {
      "list-disc": node.listItem === "bullet",
      "list-square": node.listItem === "square",
    },
    className,
  ]}
>
  <slot />
</ul>

---
import { Portfolio } from "@/types";
import { PortableText } from "astro-portabletext";
import Subheading from "./ui/subheading.astro";

type Props = {
  data: Portfolio["about"];
};

const { data } = Astro.props;
---

<section id='about' class='w-full py-12 md:py-24 lg:py-32 relative'>
  <div
    class='absolute inset-0 -z-10 h-full w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]'
  >
  </div>
  <div class='container px-4 md:px-6 mx-auto'>
    <div class='flex flex-col items-center justify-center space-y-4 text-center'>
      <div class='space-y-2'>
        {data?.title && <Subheading title={data?.title} />}
      </div>
      <div class='py-4 text-left flex flex-col gap-2'>
        {data?.description && <PortableText value={data.description} />}
      </div>
    </div>
  </div>
</section>

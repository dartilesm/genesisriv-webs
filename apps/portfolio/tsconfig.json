{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@sanity-app/*": [
        "../../apps/sanity/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  }
}